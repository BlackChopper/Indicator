<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.blackchopper.demo">

    <application
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:theme="@style/AppTheme">

        <activity android:name="com.blackchopper.demo.ExampleMainActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

        <activity
            android:name="com.blackchopper.demo.ScrollableTabExampleActivity"
            android:label="@string/scrollable_tab" />

        <activity
            android:name="com.blackchopper.demo.FixedTabExampleActivity"
            android:label="@string/fixed_tab" />

        <activity
            android:name="com.blackchopper.demo.DynamicTabExampleActivity"
            android:label="@string/dynamic_tab" />

        <activity
            android:name="com.blackchopper.demo.NoTabOnlyIndicatorExampleActivity"
            android:label="@string/no_tab_only_indicator" />

        <activity
            android:name="com.blackchopper.demo.FragmentContainerExampleActivity"
            android:label="@string/work_with_fragment_container" />

        <activity
            android:name="com.blackchopper.demo.BadgeTabExampleActivity"
            android:label="@string/tab_with_badge_view" />

        <activity
            android:name="com.blackchopper.demo.CustomNavigatorExampleActivity"
            android:label="@string/custom_navigator" />

        <activity
            android:name="com.blackchopper.demo.LoadCustomLayoutExampleActivity"
            android:label="@string/tab_with_custom_layout" />

    </application>

</manifest>